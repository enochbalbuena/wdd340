<main class="management-container">
    <h1><%= title %></h1>

    <!-- Flash Messages -->
    <% if (flashMessages && flashMessages.error && flashMessages.error.length > 0) { %>
        <div class="flash-message error">
            <% flashMessages.error.forEach((msg) => { %>
                <p><%= msg %></p>
            <% }) %>
        </div>
    <% } %>
    <% if (flashMessages && flashMessages.success && flashMessages.success.length > 0) { %>
        <div class="flash-message success">
            <% flashMessages.success.forEach((msg) => { %>
                <p><%= msg %></p>
            <% }) %>
        </div>
    <% } %>

    <!-- Management Actions -->
    <ul>
        <li><a href="/inv/add-classification">Add New Classification</a></li>
        <li><a href="/inv/add-vehicle">Add New Vehicle</a></li>
    </ul>

    <!-- Inventory Management Section -->
    <h2>Manage Inventory</h2>
    <p>Select a classification from the list below to view and manage inventory items.</p>

    <!-- Classification Select List -->
    <form id="classificationSelectForm">
        <label for="classificationList">Select Classification:</label>
        <select name="classification_id" id="classificationList">
            <option value="">--Select a Classification--</option>
            <%- classificationSelect %> <!-- Render classification options -->
        </select>
    </form>

    <!-- Inventory Display Table -->
    <table id="inventoryDisplay"></table>

    <!-- Fallback Message for Disabled JavaScript -->
    <noscript>JavaScript must be enabled to use this page.</noscript>
</main>


<script src="../../js/inventory.js"></script>