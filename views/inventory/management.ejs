<main class="management-container">
    <h1><%= title %></h1>

    <!-- Flash Messages -->
    <% if (flashMessages && flashMessages.error && flashMessages.error.length > 0) { %>
        <div class="flash-message error">
            <% flashMessages.error.forEach((msg) => { %>
                <p><%= msg %></p>
            <% }) %>
        </div>
    <% } %>
    <% if (flashMessages && flashMessages.success && flashMessages.success.length > 0) { %>
        <div class="flash-message success">
            <% flashMessages.success.forEach((msg) => { %>
                <p><%= msg %></p>
            <% }) %>
        </div>
    <% } %>

    <!-- Management Actions -->
    <ul>
        <li><a href="/inv/add-classification">Add New Classification</a></li>
        <li><a href="/inv/add-vehicle">Add New Vehicle</a></li>
    </ul>
</main>
