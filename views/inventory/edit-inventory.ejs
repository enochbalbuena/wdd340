<main class="form-container">
  <h1>Edit Vehicle</h1>

  <!-- Flash Messages -->
  <% if (flashMessages && flashMessages.error) { %>
    <div class="flash-message error">
      <p><%= flashMessages.error %></p>
    </div>
  <% } %>
  <% if (flashMessages && flashMessages.success) { %>
    <div class="flash-message success">
      <p><%= flashMessages.success %></p>
    </div>
  <% } %>

  <!-- Update Vehicle Form -->
  <form id="edit-inventory-form" action="/inv/update" method="POST" novalidate>
    <!-- Hidden input for vehicle ID -->
    <input type="hidden" name="inv_id" value="<%= inv_id %>" />

    <!-- Classification Dropdown -->
    <label for="classification_id">Classification</label>
    <select id="classification_id" name="classification_id" required>
        <%- classificationList %>
    </select>
    


    <!-- Vehicle Make -->
    <label for="inv_make">Make</label>
    <input
      type="text"
      id="inv_make"
      name="inv_make"
      value="<%= inv_make || '' %>"
      required
      minlength="3"
      title="Enter at least 3 characters for the vehicle make."
    />

    <!-- Vehicle Model -->
    <label for="inv_model">Model</label>
    <input
      type="text"
      id="inv_model"
      name="inv_model"
      value="<%= inv_model || '' %>"
      required
      minlength="3"
      title="Enter at least 3 characters for the vehicle model."
    />

    <!-- Vehicle Year -->
    <label for="inv_year">Year</label>
    <input
      type="text"
      id="inv_year"
      name="inv_year"
      value="<%= inv_year || '' %>"
      required
      pattern="\d{4}"
      title="Enter a valid 4-digit year (e.g., 2022)."
    />

    <!-- Vehicle Description -->
    <label for="inv_description">Description</label>
    <textarea
      id="inv_description"
      name="inv_description"
      required
      placeholder="Enter a detailed description of the vehicle."
    ><%= inv_description || '' %></textarea>

    <!-- Vehicle Price -->
    <label for="inv_price">Price</label>
    <input
      type="number"
      id="inv_price"
      name="inv_price"
      value="<%= inv_price || '' %>"
      required
      min="0"
      step="0.01"
      title="Enter a valid price (e.g., 25000.00)."
    />

    <!-- Vehicle Miles -->
    <label for="inv_miles">Miles</label>
    <input
      type="number"
      id="inv_miles"
      name="inv_miles"
      value="<%= inv_miles || '' %>"
      required
      min="0"
      title="Enter the vehicle's mileage as a positive number."
    />

    <!-- Vehicle Color -->
    <label for="inv_color">Color</label>
    <input
      type="text"
      id="inv_color"
      name="inv_color"
      value="<%= inv_color || '' %>"
      required
      minlength="3"
      title="Enter a valid color name (e.g., Red)."
    />

    <!-- Submit Button -->
    <button type="submit" class="btn-submit">Update Vehicle</button>
  </form>
</main>
