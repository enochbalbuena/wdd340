<main class="form-container">
  <h1 class="form-title">Add Classification</h1>

  <!-- Flash Messages -->
  <% if (flashMessages && flashMessages.error && flashMessages.error.length > 0) { %>
    <div class="flash-message error">
      <% flashMessages.error.forEach(function (msg) { %>
        <p><%= msg %></p>
      <% }); %>
    </div>
  <% } %>

  <% if (flashMessages && flashMessages.success && flashMessages.success.length > 0) { %>
    <div class="flash-message success">
      <% flashMessages.success.forEach(function (msg) { %>
        <p><%= msg %></p>
      <% }); %>
    </div>
  <% } %>

  <form action="/inv/add-classification" method="POST" class="add-classification-form" novalidate>
    <label for="classification_name" class="form-label">Classification Name</label>
    <input
      type="text"
      id="classification_name"
      name="classification_name"
      class="form-input"
      value="<%= stickyData.classification_name || '' %>"
      required
      pattern="^[a-zA-Z]+$"
      title="Only alphabetic characters are allowed."
      placeholder="Enter a classification name"
    />
    <button type="submit" class="btn-submit">Add Classification</button>
  </form>
</main>
