<main class="account-container">
  <h1>Account Management</h1>

  <% if (flashMessages.success) { %>
    <div class="flash success"><%= flashMessages.success %></div>
  <% } %>
  <% if (flashMessages.error) { %>
    <div class="flash error"><%= flashMessages.error %></div>
  <% } %>

  <!-- Greeting -->
  <h2>Welcome <%= accountData.account_firstname %></h2>

  <!-- Update Account Link -->
  <div class="management-links">
    <a class="btn-link" href="/account/update/<%= accountData.account_id %>">Update Account Information</a>

    <!-- Inventory Management for Admin or Employee -->
    <% if (isAdminOrEmployee) { %>
      <a class="btn-link" href="/inv/management">Go to Inventory Management</a>
    <% } %>
  </div>
</main>
