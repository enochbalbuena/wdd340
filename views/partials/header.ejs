<header id="top-header">
  <span class="siteName">
    <a href="/" title="Return to home page">CSE Motors</a>
  </span>
  <div id="tools">
    <% if (loggedin) { %>
      <!-- Show when the user is logged in -->
      <a title="Go to Account Management" href="/account">
        Welcome <%= accountData.account_firstname %>
      </a>
      <a title="Log out of your account" href="/account/logout">Logout</a>
    <% } else { %>
      <!-- Show when the user is not logged in -->
      <a title="Click to log in" href="/account/login">My Account</a>
    <% } %>
  </div>
</header>
